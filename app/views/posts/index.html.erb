<h2> Posts </h2>
<% @posts.reverse.each do |post| %>
  <div class='post'>
    <p><%= simple_format(post.message) %></p>
    <p><%= post.created_at.asctime%> </p>
    <p><%= post.user.email %></p>

    <ul>
      <% post.comments.each do |comment| %>
      <%= comment.name %><br />
      <%= comment.created_at.asctime %><br />
      <%= comment.content %><br />
      <% end %>
      <br />Comments: <%= post.comments.count %>
    </ul>
    <%= link_to "Add Comment", post_comments_path(post.id) %>
    <%= link_to 'delete', post_path(post.id), method: :delete,  data: { confirm: 'Are you sure you wish to delete this post?' } %>
  </div>
<%end%>





<%= link_to new_post_path do %>
  New post
<% end %>

<% if user_signed_in? %>

  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>

<% end %>
