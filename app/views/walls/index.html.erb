<div id ='wall'>
  <h1><%=@user[0].user_name%> </h1>
  <p>Find me in app/views/walls/index.html.erb</p>

  <% @wall_post.reverse.each do |post| %>
    <div class='post'>
      <p><%= simple_format(post.message) %></p>
      <p><%= post.created_at%> </p>
      <p><%= post.user.email %></p>
      <%= link_to 'delete', post_path(post.id), method: :delete,  data: { confirm: 'Are you sure you wish to delete this post?' } %>
      <%= link_to 'edit', edit_post_path(post.id) %>
    </div>
  <% end %>


  <%= form_tag({controller: "walls", action: "create"}) do |form| %>
    <%= label_tag(:post, "post to wall:") %>
    <%= text_field_tag(:post) %>
    <%= submit_tag("add") %>
  <% end %>


  <% if user_signed_in? %>

    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>

  <% end %>
</div>
